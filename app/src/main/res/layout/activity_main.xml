<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#38b2e4"
    tools:context="com.arikbidny.techharel.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:text="Harel Tech "
            android:textSize="@dimen/h4"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/signinhint"
            android:layout_width="match_parent"
            android:text="Sign in to your Harel Tech account"
            android:textSize="@dimen/p"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:weightSum="10"
            android:background="@drawable/whiterounded"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/usernameedt"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:background="@null"
                android:hint="Username"
                android:textColor="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#80ffffff"
                android:layout_height="0dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                />

            <EditText
                android:id="@+id/passwordedt"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:hint="Username"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:paddingRight="10dp"
                android:textColorHint="#80ffffff"
                android:background="@null"
                android:layout_height="0dp" />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/forgotpasswordtv"
            android:layout_width="match_parent"
            android:text="Reset Password"
            android:textSize="@dimen/p"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/signinbtn"
                android:layout_width="match_parent"
                android:text="Sign In"
                android:textSize="@dimen/h4"
                android:background="@drawable/roundedbutton2"
                android:gravity="center"
                android:textColor="#55bfe8"
                android:textStyle="bold"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/registertv"
            android:layout_width="match_parent"
            android:text="Don't have an account? Sign up!"
            android:textSize="@dimen/p"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
